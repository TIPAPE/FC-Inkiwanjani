{
  "name": "fc-inkiwanjani",
  "version": "1.0.0",
  "description": "FC Inkiwanjani Full Stack Application - Football Club Management System",
  "private": true,
  "scripts": {
    "start": "concurrently --names \"BACKEND,FRONTEND\" --prefix-colors \"bgBlue.bold,bgMagenta.bold\" \"npm run backend\" \"npm run frontend\"",
    "backend": "cd backend && npm run server",
    "frontend": "cd frontend && npx expo start",
    "dev": "npm start",
    "backend-only": "cd backend && npm run backend-only",
    "frontend-only": "cd frontend && npm run frontend-only",
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "clean": "rm -rf node_modules backend/node_modules frontend/node_modules",
    "reinstall": "npm run clean && npm run install-all"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/fc-inkiwanjani"
  },
  "keywords": [
    "football",
    "club-management",
    "react-native",
    "nodejs",
    "mysql",
    "fullstack"
  ],
  "author": "FC Inkiwanjani Team",
  "license": "MIT"
}